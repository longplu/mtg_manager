<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>MTG Wish List</title>
  </head>
  <body>
    <nav>
        <a href="/new">Add a New Card</a>
      </nav>
    <h1>MTG Wish List</h1>
    <ul>
      <% cards.forEach(card => { %>
         <li>
             <a href="/<%= card._id %>">
             <%=card.name %>
            </a>
            <form action='/<%= card.id %>?_method=DELETE' method='POST'>
              <input type="submit" value="DELETE">
            </form>
            <a href='/<%= card._id %>/edit'>Edit</a>
        </li>
      <% }) %>
    </ul>
  </body>
</html>